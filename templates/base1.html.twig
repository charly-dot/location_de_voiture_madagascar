    {% block stylesheets %}

        {% endblock %}

       <style>
  /* =============== FOOTER =============== */
  footer .navbar {
    background-color: #004080 !important;
    color: white;
  }

  footer .navbar-brand {
    color: #ffc107;
    font-weight: bold;
  }

  footer a.btn {
    background-color: #ffc107 !important;
    color: #004080 !important;
    font-weight: bold;
    border: none;
    transition: all 0.3s ease-in-out;
  }

  footer a.btn:hover {
    background-color: #c0392b !important;
    color: white !important;
  }

  footer .rounded-circle {
    border: 2px solid #004080;
  }

  footer a.text-dark {
    color: #ffc107 !important;
  }

  /* =============== FORMULAIRES & TABLE =============== */
  .card {
    background-color: #fdf9ec; /* jaune très pâle */
    border: 1px solid #004080;
    border-radius: 1rem;
  }

  table thead {
    background-color: #004080;
    color: white;
  }

  table.table tbody tr:nth-child(even) {
    background-color: #f5f5f5;
  }

  table.table tbody tr:hover {
    background-color: #e0f7fa;
  }

  .btn-warning {
    background-color: #ffc107;
    border: none;
    color: #004080;
  }

  .btn-warning:hover {
    background-color: #e0a800;
    color: white;
  }

  .btn-primary {
    background-color: #004080;
    border: none;
    color: white;
  }

  .btn-primary:hover {
    background-color: #002b59;
  }

  .btn-danger {
    background-color: #c0392b;
    border: none;
  }

  .btn-danger:hover {
    background-color: #922b21;
  }

  .btn-success {
    background-color: #28a745;
    border: none;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  /* =============== DROPDOWN MENU =============== */
  .dropdown-menu {
    background-color: #fefae0;
  }

  .dropdown-item {
    color: #004080;
  }

  .dropdown-item:hover {
    background-color: #ffc107;
    color: #004080;
    font-weight: bold;
  }

  /* =============== LIENS =============== */
  a.text-dark:hover {
    color: #fff;
  }

  /* =============== COL LATÉRAL =============== */
  .bg-info-subtle {
    background-color: #e3f2fd !important;
    border-left: 5px solid #004080;
  }
</style>

    </head>
    <body class="bg-white-200">

        {# {% include 'controllers/Container/enTete.html.twig' %} #}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
      

     
