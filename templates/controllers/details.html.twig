{% extends 'base.html.twig' %}

{% block title %}Détail du Véhicule{% endblock %}
{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <div class="col-md-6">
                <!-- Carousel Bootstrap pour les images -->
                <div id="carouselImages" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/image/{{ donne2.image }}" style="width: 440px; height:440px;" class="d-block w-100" alt="image 1">
                        </div>
                        {% if donne2.image2 %}
                            <div class="carousel-item">
                                <img src="/image/{{ donne2.image2 }}" style="width: 440px; height:440px;" class="d-block w-100" alt="image 2">
                            </div>
                        {% endif %}
                        {% if donne2.image3 %}
                            <div class="carousel-item">
                                <img src="/image/{{ donne2.image3 }}" style="width: 440px; height:440px;" class="d-block w-100" alt="image 3">
                            </div>
                        {% endif %}
                        {% if donne2.image4 %}
                            <div class="carousel-item">
                                <img src="/image/{{ donne2.image4 }}" style="width: 440px; height:440px;" class="d-block w-100" alt="image 4">
                            </div>
                        {% endif %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
            <div style="margin-left:20px; width:90%; margin-top:5px;">
                {% include 'Message.html.twig' %}
            </div>
                <div  class=" rounded-4 p-4" style="max-width: 600px;">
                    <h3 class="card-title text-center text-uppercase mb-4">{{ donne2.marque }}</h3>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Description :</strong> {{ donne2.description }}</li>
                        <li class="list-group-item"><strong>Prix :</strong> {{ donne2.prix }} Ar</li>
                        <li class="list-group-item"><strong>Nombre de places :</strong> {{ donne2.place }}</li>
                        <li class="list-group-item"><strong>Moteur :</strong> {{ donne2.motereur }}</li>
                    </ul>
                    </div>  
                    <div class="text-center d-flex justify-content-center flex-wrap gap-2" >
                        {% if donne2 is defined and donne2.reservation is defined and donne2.reservation == 'reserver' %}
                            <a class="btn btn-success me-2 affiche disabled">Commander</a>
                        {% else %}
                            <a class="btn btn-success me-2 affiche">Commander</a>
                        {% endif %}
                        <a class="btn btn-primary me-2 afficheCommentaire" href="#">Commentaire</a>
                        <a class="btn btn-secondary" href="{{ path('app_controlls') }}">Retour</a>
                    </div>
                    {% if donne2 is defined and donne2.reservation is defined and donne2.reservation == 'reserver' %}
                        <div class="alert alert-danger text-center m-4 fw-bold">
                            Réservé
                        </div>
                    {% endif %}
            </div>
        </div>
        <div class="container my-4 visibleCommenter card shadow-lg  bg-warning" style="max-width: 600px; display:none; padding:2%;" >

            {{ form_start(formCommenter) }}

            <div class="row mb-3">
                <div class="col-md-6">
                    {{ form_row(formCommenter.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(formCommenter.contact, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
             <div class="row mb-3">
                <div class="col-md-12">
                    {{ form_row(formCommenter.discution, {'attr': {'class': 'form-control'}}) }}
                </div>
                
            </div>
            

          <div class="d-flex mt-4">
            {% if donne2 is defined and donne2.reservation is defined and donne2.reservation == 'reserver' %}
                {{ form_widget(formCommenter.envoye, {'attr': {'class': 'btn btn-primary disabled'}}) }}
                tsara
            {% else %}
                {{ form_widget(formCommenter.envoye, {'attr': {'class': 'btn btn-primary '}}) }}
                mety
            {% endif %}
            
            <a class="btn btn-danger" style="margin-left:20px;" href="{{ path('admin') }}">RETOUR</a>
        </div>


            {{ form_end(formCommenter) }}


    
        </div>
        <div class="container my-4 visible card shadow-lg  bg-warning" style="max-width: 600px; display:none; padding:2%;" >
             {{ form_start(form) }}

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.dateFin, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="d-flex  align-items-center mt-4">
        <div>
            {{ form_widget(form.lancer, {'attr': {'class': 'btn btn-success'}}) }}
        </div>
        <div style="margin-left:20px;">
            <a class="btn btn-danger" href="{{ path('admin') }}">RETOUR</a>
        </div>
    </div>

    {{ form_end(form) }}
</div>
    </div>
</div>



{% endblock %}
{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const buttons = document.querySelectorAll('.affiche');
        buttons.forEach(function(button) {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                const content = this.closest('.card').querySelector('.visible');
                content.style.display = (content.style.display === "none") ? "block" : "none";
            });
        });
    });

        document.addEventListener('DOMContentLoaded', function () {
        const buttons = document.querySelectorAll('.afficheCommentaire');
        buttons.forEach(function(button) {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                const content = this.closest('.card').querySelector('.visibleCommenter');
                content.style.display = (content.style.display === "none") ? "block" : "none";
            });
        });
    });
</script>
{% endblock %}